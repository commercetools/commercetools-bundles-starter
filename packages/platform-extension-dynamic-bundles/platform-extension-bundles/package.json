{
  "name": "@commercetools-us-ps/platform-extension-bundles",
  "version": "1.1.9",
  "description": "Shared library for static and dynamic bundle extensions",
  "main": "dist/index.js",
  "scripts": {
    "lint": "prettier-eslint --write $INIT_CWD/src/**/*.js",
    "clean": "rm -rf dist",
    "webpack": "webpack --config webpack.config.js",
    "build": "yarn run clean && yarn run webpack",
    "build:prod": "cross-env NODE_ENV=production yarn run build",
    "jest": "jest",
    "jest:watch": "cross-env NODE_ENV=development && jest --watch",
    "test": "cross-env NODE_ENV=development yarn run jest",
    "precommit": "lint-staged",
    "ci-package": "yarn run build",
    "ci-deploy": "echo disabled"
  },
  "engines": {
    "node": ">= 10"
  },
  "license": "MIT",
  "keywords": [
    "commercetools",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:commercetools/platform-extension-gallery.git",
    "directory": "packages/platform-extension-bundles"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "author": "rob.senn@commercetools.com",
  "devDependencies": {
    "@babel/core": "7.13.14",
    "@babel/plugin-proposal-optional-chaining": "7.13.12",
    "@babel/preset-env": "7.13.12",
    "babel-cli": "6.26.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.5.1",
    "babel-loader": "8.2.2",
    "cross-env": "7.0.3",
    "dotenv-webpack": "1.8.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-formatter-pretty": "4.0.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-graphql": "3.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-prefer-object-spread": "1.2.1",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "25.5.4",
    "lint-staged": "10.5.4",
    "nock": "12.0.3",
    "prettier": "1.19.1",
    "prettier-eslint-cli": "5.0.1",
    "validate-commit": "3.4.0",
    "webpack": "4.46.0",
    "webpack-cli": "3.3.12"
  },
  "dependencies": {
    "@commercetools/api-request-builder": "5.6.3",
    "@commercetools/sdk-client": "2.1.2",
    "@commercetools/sdk-middleware-auth": "6.1.4",
    "@commercetools/sdk-middleware-http": "6.0.10",
    "@commercetools/sdk-middleware-queue": "2.1.4",
    "@commercetools/sync-actions": "4.9.2",
    "lodash": "4.17.21",
    "node-cache": "5.1.2",
    "node-fetch": "2.6.1",
    "uuid": "8.3.2"
  },
  "jest": {
    "rootDir": "src",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!config.js",
      "!index.js"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier-eslint --write"
    ]
  }
}